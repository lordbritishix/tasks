<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/taskRowLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="left"
    android:orientation="horizontal" >

    <View
        android:id="@+id/shapePriority"
        android:layout_width="10dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="left"
        android:background="@drawable/rectangle" />

    <TextView
        android:id="@+id/txtTaskRowDeadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:text="Deadline"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#888888"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/txtTaskRowCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtTaskRowDeadline"
        android:layout_alignBottom="@+id/txtTaskRowDeadline"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/shapePriority"
        android:text="[CAT]"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#888888"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/txtTaskRowDescriptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/shapePriority"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/shapePriority"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#888888"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/txtTaskRowTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txtTaskRowDeadline"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/shapePriority"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Title"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>